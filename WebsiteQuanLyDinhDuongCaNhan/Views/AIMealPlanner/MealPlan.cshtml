@{
    ViewBag.Title = "Thực đơn theo TDEE";
    ViewData["HideFooter"] = true;
}

<h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6 mt-[150px]">🍽️ Thực Đơn Gợi Ý Theo TDEE</h2>
<div class="text-center mb-5">
    <p><strong>TDEE của bạn:</strong> <span class="text-primary fw-bold">@ViewBag.TDEE kcal/ngày</span></p>
    <p class="text-muted small">💡 Kế hoạch 3 bữa ăn phù hợp với nhu cầu năng lượng hàng ngày của bạn</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">
        <strong>⚠️ Lỗi:</strong> @ViewBag.ErrorMessage
    </div>
}

@if (ViewBag.MealPlan != null)
{
    try
    {
        var mealPlanData = Newtonsoft.Json.Linq.JObject.Parse(ViewBag.MealPlan);
        var meals = mealPlanData["meals"];
        var nutrients = mealPlanData["nutrients"];

        if (meals != null)
        {
            <div class="nutrition-summary text-center mb-4">
                <h5 class="text-success">📊 Tổng Dinh Dưỡng Trong Ngày</h5>
                <div class="d-flex justify-content-center gap-4 flex-wrap">
                    @if (nutrients != null)
                    {
                        <div><strong>Calories:</strong> @((int)double.Parse(nutrients["calories"]?.ToString() ?? "0")) kcal</div>
                        <div><strong>Protein:</strong> @((int)double.Parse(nutrients["protein"]?.ToString() ?? "0"))g</div>
                        <div><strong>Fat:</strong> @((int)double.Parse(nutrients["fat"]?.ToString() ?? "0"))g</div>
                        <div><strong>Carbs:</strong> @((int)double.Parse(nutrients["carbohydrates"]?.ToString() ?? "0"))g</div>
                    }
                </div>
            </div>

            <div class="container">
                @{
                    int mealIndex = 0;
                }
                @foreach (var meal in meals)
                {
                    var mealId = meal["id"]?.ToString() ?? "";
                    var title = meal["title"]?.ToString() ?? "Unknown";
                    var readyInMinutes = meal["readyInMinutes"]?.ToString() ?? "N/A";
                    var servings = meal["servings"]?.ToString() ?? "1";
                    var imageRaw = meal["image"]?.ToString() ?? "";
                    // Fix image URL - prepend Spoonacular CDN if it's a relative path
                    var imageUrl = string.IsNullOrEmpty(imageRaw) ? "/images/default.jpg" : 
                                   (imageRaw.StartsWith("http") ? imageRaw : $"https://spoonacular.com/recipeImages/{imageRaw}");
                    var sourceUrl = meal["sourceUrl"]?.ToString() ?? "#";

                    <div class="meal-section mb-5">
                        <h4 class="text-center fw-bold text-success mb-3">
                            @{
                                var mealLabel = mealIndex == 0 ? "🌅 Bữa Sáng" : (mealIndex == 1 ? "☀️ Bữa Trưa" : "🌙 Bữa Tối");
                            }
                            @mealLabel
                        </h4>

                        <div class="card shadow-sm meal-card">
                            <!-- Image -->
                            <div class="image-container">
                                <img src="@imageUrl" class="food-image" alt="@title">
                            </div>

                            <!-- Content -->
                            <div class="card-body">
                                <h5 class="card-title text-center fw-bold text-success">@title</h5>
                                <div class="meal-info text-center">
                                    <p class="mb-2"><strong>⏱️ Thời gian:</strong> @readyInMinutes phút</p>
                                    <p class="mb-2"><strong>🍽️ Khẩu phần:</strong> @servings người</p>
                                </div>

                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <a href="@Url.Action("RecipeDetail", "AIMealPlanner", new { recipeId = mealId })" 
                                       class="btn btn-success">
                                        📖 Xem Công Thức
                                    </a>
                                    <a href="@sourceUrl" target="_blank" class="btn btn-outline-primary">
                                        🔗 Nguồn Gốc
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    mealIndex++;
                }
            </div>
        }
        else
        {
            <div class="text-center mt-5">
                <p class="text-danger fw-bold">⚠️ Không tìm thấy thực đơn trong phản hồi API.</p>
                @if (ViewBag.ApiRawResponse != null)
                {
                    <p class="text-muted">Vui lòng kiểm tra phần Debug Log bên dưới.</p>
                }
            </div>
        }
    }
    catch (Exception ex)
    {
        <div class="alert alert-danger text-center">
            <p>Lỗi xử lý dữ liệu view: @ex.Message</p>
        </div>
    }
}
else
{
    if (ViewBag.ErrorMessage == null) 
    {
        <div class="text-center mt-5">
            <p class="text-muted">Không có dữ liệu hiển thị.</p>
        </div>
    }
}


<!-- CSS -->
<style>
    .title-menu {
        margin-top: 150px;
        text-align: center;
    }

    /* Image container */
    .image-container {
        min-height: 250px;
        max-height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px 10px 0 0;
    }

    .food-image {
        max-height: 250px;
        max-width: 100%;
        width: auto;
        height: auto;
        object-fit: contain;
        border-radius: 8px;
        display: block;
    }

    .meal-section {
        margin-bottom: 40px;
    }

    .meal-card {
        border-radius: 15px;
        transition: transform 0.2s ease-in-out;
        border: 2px solid #C4A46B;
    }

    .meal-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .nutrition-summary {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .meal-info {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        margin: 15px 0;
    }

    .recipe-details {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        border: 1px solid #dee2e6;
    }

    .nutrition-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
        margin-top: 10px;
    }

    .nutrition-grid div {
        background-color: white;
        padding: 10px;
        border-radius: 8px;
        border-left: 3px solid #C4A46B;
    }

    .btn-success {
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 25px;
        background-color: #C4A46B;
        border: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-success:hover {
        background-color: #A89F98;
        transform: scale(1.05);
    }

    .btn-outline-primary {
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 25px;
        transition: all 0.3s ease-in-out;
    }

    .alert {
        padding: 15px;
        margin: 20px auto;
        border-radius: 10px;
        max-width: 600px;
    }

    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
    }
</style>
