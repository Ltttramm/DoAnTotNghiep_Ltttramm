@{
    ViewBag.Title = "Thực đơn theo TDEE";
    ViewData["HideFooter"] = true;
}

<h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6 mt-[150px]">🍽️ Thực Đơn Gợi Ý Theo TDEE</h2>
<div class="text-center mb-5">
    <p><strong>TDEE của bạn:</strong> <span class="text-primary fw-bold">@ViewBag.TDEE kcal/ngày</span></p>
    <p class="text-muted small">💡 Kế hoạch 3 bữa ăn phù hợp với nhu cầu năng lượng hàng ngày của bạn</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">
        <strong>⚠️ Lỗi:</strong> @ViewBag.ErrorMessage
    </div>
}

@if (ViewBag.MealPlan != null)
{
    try
    {
        var mealPlanData = Newtonsoft.Json.Linq.JObject.Parse(ViewBag.MealPlan);
        var meals = mealPlanData["meals"];
        var nutrients = mealPlanData["nutrients"];

        if (meals != null)
        {
            <div class="nutrition-summary text-center mb-4">
                <h5 class="text-success">📊 Tổng Dinh Dưỡng Trong Ngày</h5>
                <div class="d-flex justify-content-center gap-4 flex-wrap">
                    @if (nutrients != null)
                    {
                        <div><strong>Calories:</strong> @((int)double.Parse(nutrients["calories"]?.ToString() ?? "0")) kcal</div>
                        <div><strong>Protein:</strong> @((int)double.Parse(nutrients["protein"]?.ToString() ?? "0"))g</div>
                        <div><strong>Fat:</strong> @((int)double.Parse(nutrients["fat"]?.ToString() ?? "0"))g</div>
                        <div><strong>Carbs:</strong> @((int)double.Parse(nutrients["carbohydrates"]?.ToString() ?? "0"))g</div>
                    }
                </div>
            </div>

            <div class="container">
                @{
                    int mealIndex = 0;
                }
                @foreach (var meal in meals)
                {
                    var mealId = meal["id"]?.ToString() ?? "";
                    var title = meal["title"]?.ToString() ?? "Unknown";
                    var readyInMinutes = meal["readyInMinutes"]?.ToString() ?? "N/A";
                    var servings = meal["servings"]?.ToString() ?? "1";
                    var imageUrl = meal["image"]?.ToString() ?? "/images/default.jpg";
                    var sourceUrl = meal["sourceUrl"]?.ToString() ?? "#";

                    <div class="meal-section mb-5">
                        <h4 class="text-center fw-bold text-success mb-3">
                            @{
                                var mealLabel = mealIndex == 0 ? "🌅 Bữa Sáng" : (mealIndex == 1 ? "☀️ Bữa Trưa" : "🌙 Bữa Tối");
                            }
                            @mealLabel
                        </h4>

                        <div class="card shadow-sm meal-card">
                            <!-- Image -->
                            <div class="image-container">
                                <img src="@imageUrl" class="food-image" alt="@title">
                            </div>

                            <!-- Content -->
                            <div class="card-body">
                                <h5 class="card-title text-center fw-bold text-success">@title</h5>
                                <div class="meal-info text-center">
                                    <p class="mb-2"><strong>⏱️ Thời gian:</strong> @readyInMinutes phút</p>
                                    <p class="mb-2"><strong>🍽️ Khẩu phần:</strong> @servings người</p>
                                </div>

                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <button type="button" class="btn btn-success" onclick="showRecipeInstructions('@mealId', '@title')">
                                        📖 Xem Công Thức
                                    </button>
                                    <a href="@sourceUrl" target="_blank" class="btn btn-outline-primary">
                                        🔗 Nguồn Gốc
                                    </a>
                                </div>

                                <!-- Recipe details container (hidden by default) -->
                                <div id="recipe-details-@mealId" class="recipe-details mt-4" style="display:none;">
                                    <div class="loading text-center">
                                        <div class="spinner-border text-success" role="status">
                                            <span class="visually-hidden">Đang tải...</span>
                                        </div>
                                        <p>Đang tải công thức nấu ăn...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    mealIndex++;
                }
            </div>
        }
        else
        {
            <div class="text-center mt-5">
                <p class="text-danger fw-bold">⚠️ Không tìm thấy thực đơn trong phản hồi API.</p>
                @if (ViewBag.ApiRawResponse != null)
                {
                    <p class="text-muted">Vui lòng kiểm tra phần Debug Log bên dưới.</p>
                }
            </div>
        }
    }
    catch (Exception ex)
    {
        <div class="alert alert-danger text-center">
            <p>Lỗi xử lý dữ liệu view: @ex.Message</p>
        </div>
    }
}
else
{
    if (ViewBag.ErrorMessage == null) 
    {
        <div class="text-center mt-5">
            <p class="text-muted">Không có dữ liệu hiển thị.</p>
        </div>
    }
}

<!-- Always show Raw Response for Debugging -->
@if (ViewBag.ApiRawResponse != null)
{
    <div class="container mt-5">
        <div class="alert alert-info">
            <h4>🐛 API Debug Log</h4>
            <details>
                <summary>Click to view raw API response</summary>
                <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; white-space: pre-wrap; word-break: break-all; max-height: 400px; overflow-y: auto;">@ViewBag.ApiRawResponse</pre>
            </details>
        </div>
    </div>
}

<!-- JavaScript for recipe details -->
<script>
    async function showRecipeInstructions(recipeId, recipeTitle) {
        const detailsContainer = document.getElementById(`recipe-details-${recipeId}`);
        
        // Toggle visibility
        if (detailsContainer.style.display === 'block') {
            detailsContainer.style.display = 'none';
            return;
        }

        // Show loading
        detailsContainer.style.display = 'block';
        
        try {
            // Fetch recipe information from server
            const response = await fetch(`/AIMealPlanner/GetRecipeDetails?recipeId=${recipeId}`);
            const data = await response.json();

            if (data.error) {
                detailsContainer.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
                return;
            }

            // Build HTML for instructions
            let html = '<div class="recipe-content">';
            
            // Ingredients
            if (data.extendedIngredients && data.extendedIngredients.length > 0) {
                html += '<h6 class="fw-bold text-success mt-3">🌿 Nguyên liệu:</h6><ul class="list-unstyled">';
                data.extendedIngredients.forEach(ing => {
                    html += `<li>✔️ ${ing.original}</li>`;
                });
                html += '</ul>';
            }

            // Instructions
            if (data.analyzedInstructions && data.analyzedInstructions.length > 0) {
                html += '<h6 class="fw-bold text-success mt-3">👨‍🍳 Hướng Dẫn Nấu:</h6><ol>';
                data.analyzedInstructions[0].steps.forEach(step => {
                    html += `<li class="mb-2">${step.step}</li>`;
                });
                html += '</ol>';
            }

            // Nutrition
            if (data.nutrition && data.nutrition.nutrients) {
                html += '<h6 class="fw-bold text-success mt-3">📊 Dinh Dưỡng Chi Tiết:</h6>';
                html += '<div class="nutrition-grid">';
                data.nutrition.nutrients.slice(0, 10).forEach(nutrient => {
                    html += `<div><strong>${nutrient.name}:</strong> ${nutrient.amount.toFixed(1)} ${nutrient.unit}</div>`;
                });
                html += '</div>';
            }

            html += '</div>';
            detailsContainer.innerHTML = html;
        } catch (error) {
            console.error('Error fetching recipe details:', error);
            detailsContainer.innerHTML = '<div class="alert alert-danger">Không thể tải công thức. Vui lòng thử lại.</div>';
        }
    }
</script>

<!-- CSS -->
<style>
