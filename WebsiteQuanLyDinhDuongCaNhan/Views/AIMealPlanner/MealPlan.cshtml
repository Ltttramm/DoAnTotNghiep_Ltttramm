@{
    ViewBag.Title = "7-Day Meal Plan";
    ViewData["HideFooter"] = true;
}

<h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6 mt-[150px]">7-Day Meal Plan</h2>
<div class="text-center mb-5">
    <p><strong>Your TDEE:</strong> <span class="text-primary fw-bold">@ViewBag.TDEE kcal/day</span></p>
    <p class="text-muted small">Weekly meal plan tailored to your daily energy needs</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">
        <strong>Error:</strong> @ViewBag.ErrorMessage
    </div>
}

@if (ViewBag.WeeklyMealPlan != null)
{
    try
    {
        var weeklyData = Newtonsoft.Json.Linq.JObject.Parse(ViewBag.WeeklyMealPlan);
        var week = weeklyData["week"];
        
        if (week != null)
        {
            var days = new[] { "monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday" };
            var dayLabels = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
            
            <!-- Day Selector Dropdown -->
            <div class="day-selector-container mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <label for="daySelect" class="form-label fw-bold">Select Day:</label>
                        <select id="daySelect" class="form-select form-select-lg" onchange="showDayMeals(this.value)">
                            @for (int i = 0; i < days.Length; i++)
                            {
                                <option value="@i">Day @(i + 1) - @dayLabels[i]</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <!-- Render all 7 days -->
            for (int dayIndex = 0; dayIndex < days.Length; dayIndex++)
            {
                var dayName = days[dayIndex];
                var dayData = week[dayName];
                
                if (dayData != null)
                {
                    var meals = dayData["meals"];
                    var nutrients = dayData["nutrients"];
                    
                    <div id="day-@dayIndex" class="day-container" style="display: @(dayIndex == 0 ? "block" : "none")">
                        <!-- Daily Summary -->
                        <div class="nutrition-summary text-center mb-4">
                            <h5 class="text-success">Day @(dayIndex + 1) - @dayLabels[dayIndex]</h5>
                            <div class="d-flex justify-content-center gap-4 flex-wrap">
                                @if (nutrients != null)
                                {
                                    <div><strong>Calories:</strong> @((int)double.Parse(nutrients["calories"]?.ToString() ?? "0")) kcal</div>
                                    <div><strong>Protein:</strong> @((int)double.Parse(nutrients["protein"]?.ToString() ?? "0"))g</div>
                                    <div><strong>Fat:</strong> @((int)double.Parse(nutrients["fat"]?.ToString() ?? "0"))g</div>
                                    <div><strong>Carbs:</strong> @((int)double.Parse(nutrients["carbohydrates"]?.ToString() ?? "0"))g</div>
                                }
                            </div>
                        </div>

                        <!-- Meals for this day -->
                        <div class="container">
                            @{
                                int mealIndex = 0;
                            }
                            @foreach (var meal in meals)
                            {
                                var mealId = meal["id"]?.ToString() ?? "";
                                var title = meal["title"]?.ToString() ?? "Unknown";
                                var readyInMinutes = meal["readyInMinutes"]?.ToString() ?? "N/A";
                                var servings = meal["servings"]?.ToString() ?? "1";
                                var imageRaw = meal["image"]?.ToString() ?? "";
                                var imageUrl = string.IsNullOrEmpty(imageRaw) ? "/images/default.jpg" : 
                                               (imageRaw.StartsWith("http") ? imageRaw : $"https://spoonacular.com/recipeImages/{imageRaw}");
                                var sourceUrl = meal["sourceUrl"]?.ToString() ?? "#";

                                <div class="meal-section mb-5">
                                    <h4 class="text-center fw-bold text-success mb-3">
                                        @{
                                            var mealLabel = mealIndex == 0 ? "Breakfast" : (mealIndex == 1 ? "Lunch" : "Dinner");
                                        }
                                        @mealLabel
                                    </h4>

                                    <div class="card shadow-sm meal-card">
                                        <div class="image-container">
                                            <img src="@imageUrl" class="food-image" alt="@title">
                                        </div>

                                        <div class="card-body">
                                            <h5 class="card-title text-center fw-bold text-success">@title</h5>
                                            <div class="meal-info text-center">
                                                <p class="mb-2"><strong>Time:</strong> @readyInMinutes minutes</p>
                                                <p class="mb-2"><strong>Servings:</strong> @servings</p>
                                            </div>

                                            <div class="d-flex justify-content-center gap-2 mt-3">
                                                <a href="@Url.Action("RecipeDetail", "AIMealPlanner", new { recipeId = mealId })" 
                                                   class="btn btn-success">
                                                    View Recipe
                                                </a>
                                                <a href="@sourceUrl" target="_blank" class="btn btn-outline-primary">
                                                    Source
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                mealIndex++;
                            }
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <div class="alert alert-warning text-center">
                <strong>No weekly meal plan data available.</strong>
            </div>
        }
    }
    catch (Exception ex)
    {
        <div class="alert alert-danger text-center">
            <strong>Error parsing weekly meal plan:</strong> @ex.Message
        </div>
    }
}
else
{
    <div class="alert alert-info text-center">
        <strong>No data to display.</strong>
    </div>
}

<!-- API Debug Log -->
@if (ViewBag.ApiRawResponse != null)
{
    <div class="container mt-5">
        <div class="alert alert-info">
            <h4>API Debug Log</h4>
            <details>
                <summary>Click to view raw API response</summary>
                <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; white-space: pre-wrap; word-break: break-all; max-height: 400px; overflow-y: auto;">@ViewBag.ApiRawResponse</pre>
            </details>
        </div>
    </div>
}

<!-- JavaScript for day switching -->
<script>
    function showDayMeals(dayIndex) {
        // Hide all day containers
        document.querySelectorAll('.day-container').forEach(el => {
            el.style.display = 'none';
        });
        
        // Show selected day
        document.getElementById('day-' + dayIndex).style.display = 'block';
        
        // Scroll to top of meal plan
        window.scrollTo({ top: 200, behavior: 'smooth' });
    }
</script>

<!-- CSS -->
<style>
    .title-menu {
        margin-top: 150px;
        text-align: center;
    }

    .day-selector-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .day-container {
        transition: opacity 0.3s ease-in-out;
    }

    /* Image container */
    .image-container {
        min-height: 250px;
        max-height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px 10px 0 0;
    }

    .food-image {
        max-height: 250px;
        max-width: 100%;
        width: auto;
        height: auto;
        object-fit: contain;
        border-radius: 8px;
        display: block;
    }

    .meal-section {
        margin-bottom: 40px;
    }

    .meal-card {
        border-radius: 15px;
        transition: transform 0.2s ease-in-out;
        border: 2px solid #C4A46B;
    }

    .meal-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .nutrition-summary {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .meal-info {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        margin: 15px 0;
    }

    .recipe-details {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        border: 1px solid #dee2e6;
    }

    .nutrition-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
        margin-top: 10px;
    }

    .nutrition-grid div {
        background-color: white;
        padding: 10px;
        border-radius: 8px;
        border-left: 3px solid #C4A46B;
    }

    .btn-success {
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 25px;
        background-color: #C4A46B;
        border: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-success:hover {
        background-color: #A89F98;
        transform: scale(1.05);
    }

    .btn-outline-primary {
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 25px;
        transition: all 0.3s ease-in-out;
    }

    .alert {
        padding: 15px;
        margin: 20px auto;
        border-radius: 10px;
        max-width: 600px;
    }

    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
    }
</style>
