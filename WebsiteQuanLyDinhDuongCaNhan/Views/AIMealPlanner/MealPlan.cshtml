@using Newtonsoft.Json.Linq
@{
    ViewBag.Title = "Thực đơn tuần";
    ViewData["HideFooter"] = true;
}

<h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6 mt-[150px]">🍽️ Tìm Kiếm Thực Đơn</h2>
<div class="text-center mb-3">
    <p><strong>TDEE của bạn:</strong> <span class="text-primary fw-bold">@ViewBag.TDEE kcal/ngày</span></p>
    <p class="text-muted small">💡 Gợi ý: Mỗi bữa ăn nên có khoảng <strong>@((int)(ViewBag.TDEE / 3)) kcal</strong> (TDEE chia 3 bữa)</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center">
        <strong>⚠️ Lỗi:</strong> @ViewBag.ErrorMessage
    </div>
}

<!-- Form tìm kiếm (Client-side filtering) -->
<form id="filterForm" class="search-form" onsubmit="return false;">
    <div class="filter-container">
        <input type="text" id="keywordInput" placeholder="🥗 Nhập món ăn (vd: chicken)" class="form-control rounded">
        <input type="number" id="caloriesInput" placeholder="🔥 Calories (optional)" class="form-control rounded">
        <select id="dietSelect" class="form-control rounded">
            <option value="">Chọn chế độ ăn</option>
            <option value="balanced">Balanced</option>
            <option value="high-protein">High Protein</option>
            <option value="low-carb">Low Carb</option>
            <option value="low-fat">Low Fat</option>
            <option value="low-sodium">Low-Sodium</option>
            <option value="high-fiber">High-Fiber</option>
            <option value="keto">Keto</option>
            <option value="paleo">Paleo</option>
        </select>
        <select id="healthSelect" class="form-control rounded">
            <option value="">Chọn hạn chế ăn uống</option>
            <option value="gluten-free">Gluten-Free</option>
            <option value="vegan">Vegan</option>
            <option value="vegetarian">Vegetarian</option>
            <option value="dairy-free">Dairy-Free</option>
            <option value="egg-free">Egg-Free</option>
            <option value="peanut-free">Peanut-Free</option>
            <option value="tree-nut-free">Tree-Nut-Free</option>
            <option value="soy-free">Soy-Free</option>
            <option value="fish-free">Fish-Free</option>
            <option value="shellfish-free">Shellfish-Free</option>
            <option value="pork-free">Pork-Free</option>
            <option value="alcohol-free">Alcohol-Free</option>
            <option value="sugar-conscious">Sugar-Conscious</option>
            <option value="kosher">Kosher</option>
        </select>
        <button type="button" onclick="filterMeals()" class="btn btn-success rounded">🔎 Tìm kiếm</button>
        <button type="button" onclick="resetFilters()" class="btn btn-secondary rounded">🔄 Reset</button>
    </div>
</form>

<p id="resultCount" class="text-center text-muted mt-2"></p>

@if (ViewBag.MealPlan != null)
{
    try
    {
        var mealData = JObject.Parse(ViewBag.MealPlan);

        if (mealData.ContainsKey("hits"))
        {
            <div id="mealsContainer" class="container">
                <div class="row row-cols-1 row-cols-md-2 g-4" id="mealCards">
                    @foreach (var hit in mealData["hits"])
                    {
                        var recipe = hit["recipe"];
                        var imageUrl = recipe["image"]?.ToString() ?? "/images/default.jpg";
                        var url = recipe["url"]?.ToString() ?? "#";
                        var ingredients = recipe["ingredientLines"] ?? new JArray();
                        var label = recipe["label"]?.ToString() ?? "";
                        
                        // Calculate calories per serving
                        double totalCalories = double.Parse(recipe["calories"]?.ToString() ?? "0");
                        double servings = double.Parse(recipe["yield"]?.ToString() ?? "1");
                        double caloriesPerServing = totalCalories / servings;
                        
                        // Extract diet and health labels for filtering
                        var dietLabels = recipe["dietLabels"] != null ? string.Join(",", ((JArray)recipe["dietLabels"]).Select(d => d.ToString().ToLower())) : "";
                        var healthLabels = recipe["healthLabels"] != null ? string.Join(",", ((JArray)recipe["healthLabels"]).Select(h => h.ToString().ToLower())) : "";

                        <div class="col meal-card" 
                             data-label="@label.ToLower()" 
                             data-calories="@caloriesPerServing"
                             data-diet="@dietLabels"
                             data-health="@healthLabels">
                            <div class="card h-100 shadow-sm">
                                <!-- Hình ảnh món ăn -->
                                <div class="d-flex justify-content-center">
                                    <img src="@imageUrl" class="card-img-top img-fluid food-image mx-auto d-block" alt="@label">
                                </div>

                                <!-- Nội dung món ăn -->
                                <div class="card-body d-flex flex-column align-items-center">
                                    <div class="content-container">
                                        <h4 class="card-title font-weight-bold text-center fw-bold text-success">@label</h4>
                                        <p><strong>🍽️ Khẩu phần:</strong> @((int)servings) người</p>
                                        <p><strong>🔥 Calo/người:</strong> <span class="text-primary fw-bold">@((int)caloriesPerServing) kcal</span></p>
                                        <p class="text-muted small"><em>(Tổng: @((int)totalCalories) kcal)</em></p>

                                        <div class="info-box">
                                            <h6 class="fw-bold text-success">🌿 Nguyên liệu:</h6>
                                            <ul class="list-unstyled">
                                                @foreach (var ingredient in ingredients.Take(5))
                                                {
                                                    <li>✔️ @ingredient</li>
                                                }
                                                @if (ingredients.Count() > 5)
                                                {
                                                    <li><em>... và @(ingredients.Count() - 5) nguyên liệu khác</em></li>
                                                }
                                            </ul>
                                        </div>

                                        <div class="info-box">
                                            <h6 class="fw-bold text-success">🍳 Cách nấu:</h6>
                                            <a href="@url" target="_blank" class="btn btn-outline-primary">📖 Xem công thức</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <script>
                // Store all meals data for filtering
                let allMeals = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(mealData["hits"]));
                let totalMeals = allMeals.length;
                
                // Display initial count
                document.getElementById('resultCount').textContent = `Hiển thị ${totalMeals} món ăn phù hợp với TDEE của bạn`;

                function filterMeals() {
                    const keyword = document.getElementById('keywordInput').value.toLowerCase().trim();
                    const calories = document.getElementById('caloriesInput').value;
                    const diet = document.getElementById('dietSelect').value.toLowerCase();
                    const health = document.getElementById('healthSelect').value.toLowerCase();

                    const mealCards = document.querySelectorAll('.meal-card');
                    let visibleCount = 0;

                    mealCards.forEach(card => {
                        let show = true;

                        // Filter by keyword (search in label)
                        if (keyword && !card.dataset.label.includes(keyword)) {
                            show = false;
                        }

                        // Filter by calories (±100 range)
                        if (calories) {
                            const cardCalories = parseFloat(card.dataset.calories);
                            const targetCalories = parseFloat(calories);
                            if (cardCalories < targetCalories - 100 || cardCalories > targetCalories + 100) {
                                show = false;
                            }
                        }

                        // Filter by diet
                        if (diet && !card.dataset.diet.includes(diet)) {
                            show = false;
                        }

                        // Filter by health
                        if (health && !card.dataset.health.includes(health)) {
                            show = false;
                        }

                        // Show or hide card
                        card.style.display = show ? 'block' : 'none';
                        if (show) visibleCount++;
                    });

                    // Update result count
                    document.getElementById('resultCount').textContent = 
                        `Hiển thị ${visibleCount} / ${totalMeals} món ăn`;

                    // Show message if no results
                    if (visibleCount === 0) {
                        document.getElementById('resultCount').textContent = 
                            '❌ Không tìm thấy món ăn phù hợp. Hãy thử thay đổi bộ lọc.';
                        document.getElementById('resultCount').style.color = 'red';
                    } else {
                        document.getElementById('resultCount').style.color = '#6c757d';
                    }
                }

                function resetFilters() {
                    document.getElementById('keywordInput').value = '';
                    document.getElementById('caloriesInput').value = '';
                    document.getElementById('dietSelect').selectedIndex = 0;
                    document.getElementById('healthSelect').selectedIndex = 0;

                    // Show all cards
                    document.querySelectorAll('.meal-card').forEach(card => {
                        card.style.display = 'block';
                    });

                    document.getElementById('resultCount').textContent = 
                        `Hiển thị ${totalMeals} món ăn phù hợp với TDEE của bạn`;
                    document.getElementById('resultCount').style.color = '#6c757d';
                }

                // Allow Enter key to trigger search
                document.getElementById('keywordInput').addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        filterMeals();
                    }
                });
            </script>
        }
        else
        {
            <p class="text-danger text-center">API không trả về danh sách món ăn.</p>
        }
    }
    catch (Exception ex)
    {
        <p class="text-danger text-center">Lỗi khi xử lý dữ liệu: @ex.Message</p>
    }
}
else
{
    <p class="text-warning text-center">Đang tải danh sách món ăn...</p>
}

<!-- CSS -->
<style>
    .search-form {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .filter-container {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }

    .form-control {
        width: 180px;
        padding: 8px;
        border-radius: 15px;
        border: 1px solid #ccc;
    }

    /* Căn tiêu đề thực đơn xuống 150px */
    .title-menu {
        margin-top: 150px;
        text-align: center;
    }

    /* Hình ảnh món ăn */
    .food-image {
        height: 180px;
        width: 100%;
        object-fit: cover;
        border-radius: 10px;
        display: block;
        margin: 0 auto;
    }

    /* Hiệu ứng thẻ card */
    .card {
        border-radius: 15px;
        transition: transform 0.2s ease-in-out, background-color 0.3s ease-in-out;
    }

    .card:hover {
        transform: scale(1.05);
        background-color: rgba(255, 255, 255, 0.3);
    }

    /* Căn nội dung nằm giữa card */
    .card-body {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Đảm bảo nội dung có width fit-content nhưng vẫn căn giữa */
    .content-container {
        width: fit-content;
        text-align: left;
    }

    /* Căn giữa div chứa Nguyên liệu, Lượng calo, Cách nấu */
    .info-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        margin-bottom: 10px;
    }

    /* Căn danh sách nguyên liệu vào giữa */
    .list-unstyled {
        display: flex;
        flex-direction: column;
    }

    /* Chỉnh kích thước thẻ p trong cách nấu */
    .bg-light {
        border-radius: 8px;
        padding: 10px;
        width: 100%;
    }

    .btn {
        text-align: center;
    }

    /* Nút bấm */
    .btn-success {
        font-size: 14px;
        font-weight: bold;
        padding: 8px 10px;
        border-radius: 25px;
        min-width: 120px;
        background-color: #C4A46B;
        border: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-success:hover {
        background-color: #A89F98;
        transform: scale(1.05);
    }

    .btn-secondary {
        font-size: 14px;
        font-weight: bold;
        padding: 8px 10px;
        border-radius: 25px;
        min-width: 120px;
        background-color: #6c757d;
        border: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: scale(1.05);
    }

    /* Chữ đậm */
    .fw-bold {
        font-weight: bold;
    }

    /* Result count styling */
    #resultCount {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    /* Alert styling */
    .alert {
        padding: 15px;
        margin: 20px auto;
        border-radius: 10px;
        max-width: 600px;
    }

    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
    }

    /* Loading and meal card animations */
    .meal-card {
        transition: opacity 0.3s ease-in-out;
    }
</style>
