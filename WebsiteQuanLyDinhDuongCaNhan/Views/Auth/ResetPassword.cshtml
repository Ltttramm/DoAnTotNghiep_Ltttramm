@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HideHeader"] = true;
    ViewData["HideFooter"] = true;
}

<div class="flex justify-center items-center min-h-screen bg-[#F5F5DC]">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6">Đặt lại mật khẩu</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-red-500 text-sm mb-4">
                @Html.ValidationSummary(false, "", new { @class = "text-red-500" })
            </div>
        }

        <form asp-action="ResetPassword" asp-controller="Auth" method="post" class="space-y-4">
            <input type="hidden" name="Token" value="@ViewBag.Token" />

            <div>
                <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input name="Email" type="email" required readonly value="@ViewBag.Email"
                       class="mt-1 block w-full px-4 py-2 border rounded-md bg-gray-100">

            </div>

            <div>
                <label for="NewPassword" class="block text-sm font-medium text-gray-700">Mật khẩu mới</label>
                <input name="NewPassword" type="password" required
                       class="mt-1 block w-full px-4 py-2 border rounded-md focus:ring-[#C4A46B] focus:border-[#C4A46B]">
            </div>

            <div>
                <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Xác nhận mật khẩu</label>
                <input name="ConfirmPassword" type="password" required
                       class="mt-1 block w-full px-4 py-2 border rounded-md focus:ring-[#C4A46B] focus:border-[#C4A46B]">
            </div>

            <button type="submit" class="w-full bg-[#C4A46B] text-white py-2 rounded-md hover:bg-[#A89F98] transition">
                Đặt lại mật khẩu
            </button>
        </form>

        <div class="text-center mt-4 text-sm text-gray-600">
            <a href="@Url.Action("Login", "Auth")" class="text-[#B8860B] hover:underline">Quay lại đăng nhập</a>
        </div>
    </div>
</div>
