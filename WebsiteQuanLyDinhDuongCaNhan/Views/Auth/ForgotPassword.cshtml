@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HideHeader"] = true;
    ViewData["HideFooter"] = true;
}

<div class="flex justify-center items-center min-h-screen bg-[#F5F5DC]">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold text-center text-[#C4A46B] mb-6">Quên mật khẩu</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-red-500 text-sm mb-4">
                @Html.ValidationSummary(false, "", new { @class = "text-red-500" })
            </div>
        }

        <form asp-action="ForgotPassword" asp-controller="Auth" method="post" class="space-y-4">
            <div>
                <label for="Email" class="block text-sm font-medium text-gray-700">Nhập email của bạn</label>
                <input name="Email" type="email" required
                       class="mt-1 block w-full px-4 py-2 border rounded-md focus:ring-[#C4A46B] focus:border-[#C4A46B]">
            </div>

            <button type="submit" class="w-full bg-[#C4A46B] text-white py-2 rounded-md hover:bg-[#A89F98] transition">
                Gửi yêu cầu
            </button>
        </form>

        <div class="text-center mt-4 text-sm text-gray-600">
            <a href="@Url.Action("Login", "Auth")" class="text-[#B8860B] hover:underline">Quay lại đăng nhập</a>
        </div>
    </div>
</div>
